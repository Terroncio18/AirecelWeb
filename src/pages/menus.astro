---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/footer.astro";
import "../styles/menus.css";
import "../styles/footer.css";
---

<Layout>
    <main>
        <section class="menus-header">
            <h1 id="menus-title"></h1>
        </section>

        <section class="menus-section">
            <div id="menus-list" class="menus-grid">
                <a id="carta-address" target="_blank" href="">
                    <div class="pictures-container">
                        <div
                            class="bg-image active"
                            style="background-image: url(/img/menus/carta/img1.jpg);"
                        >
                        </div>
                        <div
                            class="bg-image"
                            style="background-image: url(/img/menus/carta/img2.jpg);"
                        >
                        </div>
                        <div
                            class="bg-image"
                            style="background-image: url(/img/menus/carta/img3.jpg);"
                        >
                        </div>
                        <div
                            class="bg-image"
                            style="background-image: url(/img/menus/carta/img4.jpg);"
                        >
                        </div>
                        <div
                            class="bg-image"
                            style="background-image: url(/img/menus/carta/img5.jpg);"
                        >
                        </div>
                        <div
                            class="bg-image"
                            style="background-image: url(/img/menus/carta/img6.jpg);"
                        >
                        </div>
                    </div>
                    <div class="text-container">
                        <span id="carta-title" class="span-title"></span>
                        <span id="carta-description" class="span-description"
                        ></span>
                    </div>
                </a>
                <a
                    id="special-address"
                    target="_blank"
                    href="/public/pdfs/menu-especial.pdf"
                >
                    <div class="pictures-container">
                        <div
                            class="bg-image active"
                            style="background-image: url(/img/menus/special/img1.jpg);"
                        >
                        </div>
                        <div
                            class="bg-image"
                            style="background-image: url(/img/menus/special/img2.jpg);"
                        >
                        </div>
                        <div
                            class="bg-image"
                            style="background-image: url(/img/menus/special/img3.jpg);"
                        >
                        </div>
                    </div>
                    <div class="text-container">
                        <span id="special-title" class="span-title"></span>
                        <span id="special-description" class="span-description"
                        ></span>
                    </div>
                </a>
                <a
                    id="snack-address"
                    target="_blank"
                    href="/public/pdfs/menu-snack.pdf"
                >
                    <div class="pictures-container">
                        <div
                            class="bg-image active"
                            style="background-image: url(/img/menus/snack/img1.jpg);"
