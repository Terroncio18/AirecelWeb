                        <span id="wines-description" class="span-description"
                        ></span>
                    </div>
                </a>
            </div>
        </section>
    </main>

    <Footer />

    <script type="module">
        document.addEventListener("DOMContentLoaded", () => {
            import("../src/scripts/textManager.js").then(
                ({ renderMenusTitles }) => {
                    renderMenusTitles();
                },
            );
        });

        document.addEventListener("languageChanged", () => {
            import("../src/scripts/textManager.js").then(
                ({ renderMenusTitles }) => {
                    renderMenusTitles();
                },
            );
        });
    </script>
    <script>
        import "../scripts/images";
    </script>
</Layout>
